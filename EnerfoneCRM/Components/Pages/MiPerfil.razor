@page "/mi-perfil"
@rendermode InteractiveServer
@using EnerfoneCRM.Services
@using EnerfoneCRM.Models
@using System.ComponentModel.DataAnnotations
@inject AuthService AuthService
@inject UsuarioService UsuarioService
@inject NavigationManager NavigationManager

<PageTitle>Mi Perfil - EnerfoneCRM</PageTitle>

@if (cargando)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3 text-muted">Cargando...</p>
    </div>
}
else
{
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i>Mi Perfil</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(mensajeError))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@mensajeError
                            <button type="button" class="btn-close" @onclick="@(() => mensajeError = string.Empty)"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(mensajeExito))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@mensajeExito
                            <button type="button" class="btn-close" @onclick="@(() => mensajeExito = string.Empty)"></button>
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="@HandleGuardarPerfil">
                        <DataAnnotationsValidator />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Usuario</label>
                                <input type="text" class="form-control" value="@AuthService.UsuarioActual?.NombreUsuario" readonly disabled />
                                <div class="form-text">El nombre de usuario no se puede modificar</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Rol</label>
                                <input type="text" class="form-control" value="@AuthService.UsuarioActual?.Rol" readonly disabled />
                                <div class="form-text">El rol es asignado por el administrador</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nombre *</label>
                                <input type="text" class="form-control" @bind="model.Nombre" placeholder="Ingresa tu nombre" />
                                <ValidationMessage For="@(() => model.Nombre)" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Apellidos *</label>
                                <input type="text" class="form-control" @bind="model.Apellidos" placeholder="Ingresa tus apellidos" />
                                <ValidationMessage For="@(() => model.Apellidos)" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email *</label>
                            <input type="email" class="form-control" @bind="model.Email" placeholder="tucorreo@ejemplo.com" />
                            <ValidationMessage For="@(() => model.Email)" />
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3"><i class="bi bi-geo-alt me-2"></i>Datos de Contacto</h5>

                        <div class="mb-3">
                            <label class="form-label">Dirección</label>
                            <input type="text" class="form-control" @bind="model.Direccion" placeholder="Calle, número, piso..." />
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Código Postal</label>
                                <input type="text" class="form-control" @bind="model.CodigoPostal" placeholder="28001" maxlength="10" />
                            </div>

                            <div class="col-md-8 mb-3">
                                <label class="form-label">Localidad</label>
                                <input type="text" class="form-control" @bind="model.Localidad" placeholder="Madrid" />
                            </div>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3"><i class="bi bi-bank me-2"></i>Datos Bancarios</h5>

                        <div class="mb-3">
                            <label class="form-label">Número de Cuenta (IBAN)</label>
                            <input type="text" class="form-control" @bind="model.NumeroCuenta" placeholder="ES00 0000 0000 0000 0000 0000" maxlength="34" />
                            <div class="form-text">Formato: ES00 0000 0000 00 0000000000</div>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3"><i class="bi bi-gear me-2"></i>Preferencias</h5>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="notificaciones" @bind="model.RecibirNotificaciones" />
                            <label class="form-check-label" for="notificaciones">
                                Recibir notificaciones por email
                            </label>
                            <div class="form-text">Recibirás emails cuando se realicen cambios en tus contratos</div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancelar">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@guardando">
                                @if (guardando)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Guardando...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-2"></i>
                                    <span>Guardar Cambios</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            <div class="mt-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-info-circle me-2"></i>Información</h6>
                        <ul class="small mb-0">
                            <li>Los campos marcados con * son obligatorios</li>
                            <li>Para cambiar tu contraseña, utiliza la opción del menú de usuario</li>
                            <li>Si necesitas modificar tu usuario o rol, contacta con el administrador</li>
                            <li>Los datos bancarios son necesarios para gestionar tus comisiones</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@code {
    private PerfilModel model = new();
    private string mensajeError = string.Empty;
    private string mensajeExito = string.Empty;
    private bool guardando = false;
    private bool cargando = true;

    protected override void OnInitialized()
    {
        // No hacer nada aquí, esperar a OnAfterRenderAsync
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Verificar autenticación (MainLayout ya cargó la sesión)
            if (!AuthService.EstaAutenticado || AuthService.UsuarioActual == null)
            {
                NavigationManager.NavigateTo("/login", true);
                return;
            }

            // Cargar datos del usuario
            var usuario = await UsuarioService.ObtenerPorIdAsync(AuthService.UsuarioActual.Id);
            if (usuario != null)
            {
                model.Nombre = usuario.Nombre ?? string.Empty;
                model.Apellidos = usuario.Apellidos ?? string.Empty;
                model.Email = usuario.Email;
                model.Direccion = usuario.Direccion ?? string.Empty;
                model.CodigoPostal = usuario.CodigoPostal ?? string.Empty;
                model.Localidad = usuario.Localidad ?? string.Empty;
                model.NumeroCuenta = usuario.NumeroCuenta ?? string.Empty;
                model.RecibirNotificaciones = usuario.RecibirNotificaciones;
            }
            
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task HandleGuardarPerfil()
    {
        mensajeError = string.Empty;
        mensajeExito = string.Empty;
        guardando = true;

        try
        {
            if (AuthService.UsuarioActual == null)
            {
                mensajeError = "No se pudo identificar al usuario actual";
                return;
            }

            // Obtener el usuario actual completo
            var usuario = await UsuarioService.ObtenerPorIdAsync(AuthService.UsuarioActual.Id);
            if (usuario == null)
            {
                mensajeError = "No se pudo cargar el usuario";
                return;
            }

            // Actualizar solo los campos permitidos
            usuario.Nombre = model.Nombre;
            usuario.Apellidos = model.Apellidos;
            usuario.Email = model.Email;
            usuario.Direccion = model.Direccion;
            usuario.CodigoPostal = model.CodigoPostal;
            usuario.Localidad = model.Localidad;
            usuario.NumeroCuenta = model.NumeroCuenta;
            usuario.RecibirNotificaciones = model.RecibirNotificaciones;

            var (exito, mensaje) = await UsuarioService.ActualizarAsync(usuario);

            if (exito)
            {
                mensajeExito = "Perfil actualizado correctamente. Redirigiendo...";
                
                // Esperar un momento para que se vea el mensaje y redirigir
                await Task.Delay(1500);
                NavigationManager.NavigateTo("/", false);
            }
            else
            {
                mensajeError = mensaje;
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al actualizar el perfil: {ex.Message}";
        }
        finally
        {
            guardando = false;
        }
    }

    private void Cancelar()
    {
        NavigationManager.NavigateTo("/", false);
    }

    private class PerfilModel
    {
        [Required(ErrorMessage = "El nombre es requerido")]
        [StringLength(100, ErrorMessage = "El nombre no puede exceder 100 caracteres")]
        public string Nombre { get; set; } = string.Empty;

        [Required(ErrorMessage = "Los apellidos son requeridos")]
        [StringLength(100, ErrorMessage = "Los apellidos no pueden exceder 100 caracteres")]
        public string Apellidos { get; set; } = string.Empty;

        [Required(ErrorMessage = "El email es requerido")]
        [EmailAddress(ErrorMessage = "El formato del email no es válido")]
        [StringLength(45, ErrorMessage = "El email no puede exceder 45 caracteres")]
        public string Email { get; set; } = string.Empty;

        [StringLength(255, ErrorMessage = "La dirección no puede exceder 255 caracteres")]
        public string Direccion { get; set; } = string.Empty;

        [StringLength(10, ErrorMessage = "El código postal no puede exceder 10 caracteres")]
        public string CodigoPostal { get; set; } = string.Empty;

        [StringLength(100, ErrorMessage = "La localidad no puede exceder 100 caracteres")]
        public string Localidad { get; set; } = string.Empty;

        [StringLength(34, ErrorMessage = "El número de cuenta no puede exceder 34 caracteres")]
        public string NumeroCuenta { get; set; } = string.Empty;

        public bool RecibirNotificaciones { get; set; } = false;
    }
}
