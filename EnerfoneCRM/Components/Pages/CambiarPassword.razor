@page "/cambiar-password"
@rendermode InteractiveServer
@using EnerfoneCRM.Services
@using System.ComponentModel.DataAnnotations
@inject AuthService AuthService
@inject UsuarioService UsuarioService
@inject NavigationManager NavigationManager

<PageTitle>Cambiar Contraseña - EnerfoneCRM</PageTitle>

@if (cargando)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3 text-muted">Cargando...</p>
    </div>
}
else
{
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-key me-2"></i>Cambiar Contraseña</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(mensajeError))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@mensajeError
                            <button type="button" class="btn-close" @onclick="@(() => mensajeError = string.Empty)"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(mensajeExito))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@mensajeExito
                            <button type="button" class="btn-close" @onclick="@(() => mensajeExito = string.Empty)"></button>
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="@HandleCambiarPassword">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input type="text" class="form-control" value="@AuthService.UsuarioActual?.NombreUsuario" readonly disabled />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña Actual *</label>
                            <div class="input-group">
                                <input type="@(mostrarPasswordActual ? "text" : "password")" 
                                       class="form-control" 
                                       @bind="model.PasswordActual" 
                                       placeholder="Ingresa tu contraseña actual" />
                                <button class="btn btn-outline-secondary" 
                                        type="button" 
                                        @onclick="@(() => mostrarPasswordActual = !mostrarPasswordActual)">
                                    <i class="bi bi-eye@(mostrarPasswordActual ? "-slash" : "")"></i>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => model.PasswordActual)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nueva Contraseña *</label>
                            <div class="input-group">
                                <input type="@(mostrarPasswordNueva ? "text" : "password")" 
                                       class="form-control" 
                                       @bind="model.PasswordNueva" 
                                       placeholder="Ingresa tu nueva contraseña" />
                                <button class="btn btn-outline-secondary" 
                                        type="button" 
                                        @onclick="@(() => mostrarPasswordNueva = !mostrarPasswordNueva)">
                                    <i class="bi bi-eye@(mostrarPasswordNueva ? "-slash" : "")"></i>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => model.PasswordNueva)" />
                            <div class="form-text">La contraseña debe tener al menos 6 caracteres</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Confirmar Nueva Contraseña *</label>
                            <div class="input-group">
                                <input type="@(mostrarPasswordConfirmacion ? "text" : "password")" 
                                       class="form-control" 
                                       @bind="model.ConfirmarPasswordNueva" 
                                       placeholder="Confirma tu nueva contraseña" />
                                <button class="btn btn-outline-secondary" 
                                        type="button" 
                                        @onclick="@(() => mostrarPasswordConfirmacion = !mostrarPasswordConfirmacion)">
                                    <i class="bi bi-eye@(mostrarPasswordConfirmacion ? "-slash" : "")"></i>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => model.ConfirmarPasswordNueva)" />
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancelar">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@guardando">
                                @if (guardando)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Cambiando...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-2"></i>
                                    <span>Cambiar Contraseña</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            <div class="mt-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-info-circle me-2"></i>Recomendaciones de Seguridad</h6>
                        <ul class="small mb-0">
                            <li>Usa una contraseña única que no utilices en otros sitios</li>
                            <li>Combina letras mayúsculas y minúsculas, números y símbolos</li>
                            <li>Evita usar información personal fácil de adivinar</li>
                            <li>Cambia tu contraseña regularmente</li>
                            <li>No compartas tu contraseña con nadie</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@code {
    private CambiarPasswordModel model = new();
    private string mensajeError = string.Empty;
    private string mensajeExito = string.Empty;
    private bool guardando = false;
    private bool mostrarPasswordActual = false;
    private bool mostrarPasswordNueva = false;
    private bool mostrarPasswordConfirmacion = false;
    private bool cargando = true;

    protected override void OnInitialized()
    {
        // No hacer nada aquí, esperar a OnAfterRenderAsync
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Verificar autenticación (MainLayout ya cargó la sesión)
            if (!AuthService.EstaAutenticado || AuthService.UsuarioActual == null)
            {
                NavigationManager.NavigateTo("/login", true);
                return;
            }

            cargando = false;
            StateHasChanged();
        }
    }

    private async Task HandleCambiarPassword()
    {
        mensajeError = string.Empty;
        mensajeExito = string.Empty;
        guardando = true;

        try
        {
            if (AuthService.UsuarioActual == null)
            {
                mensajeError = "No se pudo identificar al usuario actual";
                return;
            }

            var (exito, mensaje) = await UsuarioService.CambiarPasswordAsync(
                AuthService.UsuarioActual.Id,
                model.PasswordActual,
                model.PasswordNueva
            );

            if (exito)
            {
                mensajeExito = "Contraseña cambiada correctamente. Redirigiendo al login...";
                // Limpiar el formulario
                model = new();
                mostrarPasswordActual = false;
                mostrarPasswordNueva = false;
                mostrarPasswordConfirmacion = false;
                
                // Cerrar sesión después de cambiar la contraseña
                await Task.Delay(1500); // Dar tiempo para ver el mensaje
                await AuthService.Logout();
                NavigationManager.NavigateTo("/login", true);
            }
            else
            {
                mensajeError = mensaje;
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cambiar la contraseña: {ex.Message}";
        }
        finally
        {
            guardando = false;
        }
    }

    private void Cancelar()
    {
        NavigationManager.NavigateTo("/", false);
    }

    private class CambiarPasswordModel
    {
        [Required(ErrorMessage = "La contraseña actual es requerida")]
        public string PasswordActual { get; set; } = string.Empty;

        [Required(ErrorMessage = "La nueva contraseña es requerida")]
        [StringLength(50, MinimumLength = 6, ErrorMessage = "La contraseña debe tener entre 6 y 50 caracteres")]
        public string PasswordNueva { get; set; } = string.Empty;

        [Required(ErrorMessage = "Debe confirmar la nueva contraseña")]
        [Compare("PasswordNueva", ErrorMessage = "Las contraseñas no coinciden")]
        public string ConfirmarPasswordNueva { get; set; } = string.Empty;
    }
}
