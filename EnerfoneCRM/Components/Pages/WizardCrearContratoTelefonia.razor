        else if (tarifa.Tipo == "Movil")
            return $"{tarifa.GbMovil}";
        else if (tarifa.Tipo == "FibraMovil")
            return $"{tarifa.Fibra} + {tarifa.GbMovil}";
        else if (tarifa.Tipo == "FibraMovilTV")
            return $"{tarifa.Fibra} + {tarifa.GbMovil} + TV";
        return $"{tarifa.Compania} - {tarifa.Tipo}";
    }

