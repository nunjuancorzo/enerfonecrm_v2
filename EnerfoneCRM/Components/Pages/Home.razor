    private async Task RenderizarMapa()
    {
        try
        {
            Console.WriteLine($"[MAPA] Total contratos para mapa: {contratosParaMapa.Count}");
            
            if (contratosParaMapa.Any())
            {
                // Inicializar el mapa
                await JSRuntime.InvokeVoidAsync("mapaContratos.inicializar", "mapaContratos");
                
                // Preparar datos de contratos individuales para JavaScript
                var contratosParaJS = contratosParaMapa.Select(c => new
                {
                    id = c.Id,
                    tipo = c.Tipo,
                    cliente = c.NombreCliente ?? "Sin nombre",
                    direccion = c.DireccionInstalacionAlarma ?? "",
                    codigoPostal = c.CodigoPostalInstalacion ?? "",
                    localidad = c.LocalidadInstalacion ?? "",
                    provincia = c.ProvinciaInstalacion ?? "",
                    estado = c.Estado ?? "Sin estado",
                    fecha = c.FechaCreacion?.ToString("dd/MM/yyyy") ?? "Sin fecha"
                }).ToList();
                
                Console.WriteLine($"[MAPA] Contratos preparados para JS: {contratosParaJS.Count}");
                foreach(var c in contratosParaJS)
                {
                    Console.WriteLine($"[MAPA] - {c.tipo} | Dirección: {c.direccion} | CP: {c.codigoPostal} | Localidad: {c.localidad} | Provincia: {c.provincia} | Cliente: {c.cliente}");
                }
                
                // Convertir a JSON y luego pasar
                var jsonContratos = JsonSerializer.Serialize(contratosParaJS);
                await JSRuntime.InvokeVoidAsync("eval", $"window.mapaContratos.agregarMarcadoresIndividuales({jsonContratos})");
            }
            else
            {
                Console.WriteLine($"[MAPA] No hay contratos para mostrar en el mapa");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al renderizar mapa: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
    }

