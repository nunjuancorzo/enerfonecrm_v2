@page "/tarifas/energia"
@using EnerfoneCRM.Models
@using EnerfoneCRM.Services
@rendermode InteractiveServer
@inject TarifaEnergiaService TarifaService
@inject ComercializadoraService ComercializadoraService
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Enerfone CRM</PageTitle>

@if (cargandoSesion)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    @if (!AuthService.EstaAutenticado)
    {
        <div class="alert alert-warning m-4">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No tienes acceso a esta página. Por favor, inicia sesión.
        </div>
    }
    else if (AuthService.UsuarioActual?.Rol != "Administrador")
    {
        <div class="alert alert-danger m-4">
            <i class="bi bi-shield-exclamation me-2"></i>
            No tienes permisos para acceder a esta página. Solo los administradores pueden gestionar tarifas.
        </div>
    }
    else
    {
        <div class="container-fluid p-4">
            <div class="row mb-4">
                <div class="col-md-12">
                    <h2 class="mb-0">
                        <i class="bi bi-lightning-charge-fill me-2 text-warning"></i>
                        Gestión de Tarifas de Energía
                    </h2>
                    <p class="text-muted">Administra las tarifas de electricidad y gas</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensajeExito))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@mensajeExito
                    <button type="button" class="btn-close" @onclick="() => mensajeExito = string.Empty"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(mensajeError))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@mensajeError
                    <button type="button" class="btn-close" @onclick="() => mensajeError = string.Empty"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Listado de Tarifas</h5>
                    <button class="btn btn-primary" @onclick="MostrarModalCrear">
                        <i class="bi bi-plus-circle me-2"></i>Nueva Tarifa
                    </button>
                </div>
                <div class="card-body p-0">
                    @if (cargando)
                    {
                        <div class="text-center p-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando tarifas...</span>
                            </div>
                            <p class="mt-3 text-muted">Cargando tarifas...</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="cursor: pointer;" @onclick='() => OrdenarPor("Empresa")'>
                                            Empresa
                                            @if (columnaOrden == "Empresa")
                                            {
                                                <i class="bi bi-@(ordenAscendente ? "arrow-up" : "arrow-down")"></i>
                                            }
                                        </th>
                                        <th style="cursor: pointer;" @onclick='() => OrdenarPor("Tipo")'>
                                            Tipo
                                            @if (columnaOrden == "Tipo")
                                            {
                                                <i class="bi bi-@(ordenAscendente ? "arrow-up" : "arrow-down")"></i>
                                            }
                                        </th>
                                        <th style="cursor: pointer;" @onclick='() => OrdenarPor("Nombre")'>
                                            Nombre
                                            @if (columnaOrden == "Nombre")
                                            {
                                                <i class="bi bi-@(ordenAscendente ? "arrow-up" : "arrow-down")"></i>
                                            }
                                        </th>
                                        <th>P1</th>
                                        <th>P2</th>
                                        <th>P3</th>
                                        <th>E1</th>
                                        <th>E2</th>
                                        <th>E3</th>
                                        <th style="cursor: pointer;" @onclick='() => OrdenarPor("PrecioNew")'>
                                            Precio
                                            @if (columnaOrden == "PrecioNew")
                                            {
                                                <i class="bi bi-@(ordenAscendente ? "arrow-up" : "arrow-down")"></i>
                                            }
                                        </th>
                                        <th style="cursor: pointer;" @onclick='() => OrdenarPor("Comision")'>
                                            Comisión
                                            @if (columnaOrden == "Comision")
                                            {
                                                <i class="bi bi-@(ordenAscendente ? "arrow-up" : "arrow-down")"></i>
                                            }
                                        </th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (tarifas == null || !tarifas.Any())
                                    {
                                        <tr>
                                            <td colspan="12" class="text-center text-muted py-4">
                                                <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                                                <p class="mb-0 mt-2">No hay tarifas registradas</p>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var tarifa in tarifasFiltradas)
                                        {
                                            <tr>
                                                <td><strong>@tarifa.Empresa</strong></td>
                                                <td><span class="badge @ObtenerColorTipo(tarifa.Tipo)">@tarifa.Tipo</span></td>
                                                <td>@tarifa.Nombre</td>
                                                <td><small>@tarifa.Potencia1</small></td>
                                                <td><small>@tarifa.Potencia2</small></td>
                                                <td><small>@tarifa.Potencia3</small></td>
                                                <td><small>@tarifa.Energia1</small></td>
                                                <td><small>@tarifa.Energia2</small></td>
                                                <td><small>@tarifa.Energia3</small></td>
                                                <td><strong>@tarifa.PrecioNew.ToString("N2")€</strong></td>
                                                <td><span class="badge bg-success">@tarifa.Comision.ToString("N2")%</span></td>
                                                <td class="text-end" style="white-space: nowrap;">
                                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => MostrarModalEditar(tarifa)" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-info me-1" @onclick="() => MostrarModalDuplicar(tarifa)" title="Duplicar">
                                                        <i class="bi bi-files"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmarEliminar(tarifa)" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Paginación -->
                        @if (tarifas != null && tarifas.Any() && totalPaginas > 1)
                        {
                            <div class="d-flex justify-content-between align-items-center p-3 border-top">
                                <div class="text-muted">
                                    Mostrando @((paginaActual - 1) * elementosPorPagina + 1) - @(Math.Min(paginaActual * elementosPorPagina, totalElementos)) de @totalElementos tarifas
                                </div>
                                <nav>
                                    <ul class="pagination mb-0">
                                        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPagina(1)" disabled="@(paginaActual == 1)">
                                                <i class="bi bi-chevron-double-left"></i>
                                            </button>
                                        </li>
                                        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPagina(paginaActual - 1)" disabled="@(paginaActual == 1)">
                                                <i class="bi bi-chevron-left"></i>
                                            </button>
                                        </li>
                                        @for (int i = Math.Max(1, paginaActual - 2); i <= Math.Min(totalPaginas, paginaActual + 2); i++)
                                        {
                                            var pagina = i;
                                            <li class="page-item @(paginaActual == pagina ? "active" : "")">
                                                <button class="page-link" @onclick="() => CambiarPagina(pagina)">@pagina</button>
                                            </li>
                                        }
                                        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPagina(paginaActual + 1)" disabled="@(paginaActual == totalPaginas)">
                                                <i class="bi bi-chevron-right"></i>
                                            </button>
                                        </li>
                                        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => CambiarPagina(totalPaginas)" disabled="@(paginaActual == totalPaginas)">
                                                <i class="bi bi-chevron-double-right"></i>
                                            </button>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Modal Crear/Editar -->
        @if (mostrarModal)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-xl modal-dialog-scrollable" style="max-height: 90vh;">
                    <div class="modal-content border-0 shadow-lg">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title">
                                <i class="bi bi-@(modoEdicion ? "pencil-square" : "plus-circle-fill") me-2"></i>
                                @(modoEdicion ? "Editar" : "Nueva") Tarifa de Energía
                            </h5>
                            <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                        </div>
                        <EditForm Model="tarifaActual" OnValidSubmit="GuardarTarifa">
                            <div class="modal-header bg-light border-bottom">
                                <div class="d-flex gap-2 w-100">
                                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal" disabled="@guardando">
                                        Cancelar
                                    </button>
                                    <button type="submit" class="btn btn-primary" disabled="@guardando">
                                        @if (guardando)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-save me-2"></i>
                                        }
                                        Guardar
                                    </button>
                                </div>
                            </div>
                            <div class="modal-body p-4" style="background-color: #e9ecef; max-height: calc(90vh - 140px); overflow-y: auto;">
                                <DataAnnotationsValidator />
                                
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold">Empresa <span class="text-danger">*</span></label>
                                        <InputSelect class="form-select" @bind-Value="tarifaActual.Empresa">
                                            <option value="">-- Selecciona una comercializadora --</option>
                                            @foreach (var comercializadora in comercializadoras)
                                            {
                                                <option value="@comercializadora.Nombre">@comercializadora.Nombre</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="() => tarifaActual.Empresa" class="text-danger" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold">Tipo <span class="text-danger">*</span></label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Tipo" placeholder="Ej: 2.0TD" />
                                        <ValidationMessage For="() => tarifaActual.Tipo" class="text-danger" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold">Nombre <span class="text-danger">*</span></label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Nombre" placeholder="Ej: Tarifa Plana" />
                                        <ValidationMessage For="() => tarifaActual.Nombre" class="text-danger" />
                                    </div>
                                </div>

                                <hr class="my-4" />

                                <h6 class="text-primary mb-3"><i class="bi bi-lightning me-2"></i>Potencias (€/kW día)</h6>
                                <div class="row mb-3">
                                    <div class="col-md-2">
                                        <label class="form-label">Potencia 1 <span class="text-danger">*</span></label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Potencia1" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Potencia 2</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Potencia2" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Potencia 3</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Potencia3" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Potencia 4</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Potencia4" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Potencia 5</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Potencia5" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Potencia 6</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Potencia6" />
                                    </div>
                                </div>

                                <h6 class="text-success mb-3"><i class="bi bi-activity me-2"></i>Energías (€/kWh)</h6>
                                <div class="row mb-3">
                                    <div class="col-md-2">
                                        <label class="form-label">Energía 1 <span class="text-danger">*</span></label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Energia1" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Energía 2</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Energia2" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Energía 3</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Energia3" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Energía 4</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Energia4" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Energía 5</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Energia5" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">Energía 6</label>
                                        <InputText class="form-control" @bind-Value="tarifaActual.Energia6" />
                                    </div>
                                </div>

                                <hr class="my-4" />

                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Precio (€)</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.PrecioNew" step="0.01" />
                                            <span class="input-group-text">€</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Comisión (%)</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.Comision" step="0.01" />
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                </div>

                                <hr class="my-4" />
                                <h6 class="mb-3"><i class="bi bi-calculator me-2"></i>Precios para Comparador (Opcional)</h6>
                                <p class="text-muted small">Configura estos precios para que la tarifa aparezca en el comparador de energía</p>
                                
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold">Término Fijo Diario</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.TerminoFijoDiario" step="0.001" />
                                            <span class="input-group-text">€/día</span>
                                        </div>
                                        <small class="text-muted">Ej: 0.12</small>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-12">
                                        <strong class="d-block mb-2">Precios de Potencia (€/kW/día)</strong>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Periodo 1 (Punta)</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.PrecioPotenciaP1" step="0.001" />
                                            <span class="input-group-text">€/kW/día</span>
                                        </div>
                                        <small class="text-muted">Ej: 0.105</small>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Periodo 2 (Llano/Valle)</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.PrecioPotenciaP2" step="0.001" />
                                            <span class="input-group-text">€/kW/día</span>
                                        </div>
                                        <small class="text-muted">Ej: 0.046</small>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Periodo 3 (Valle)</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.PrecioPotenciaP3" step="0.0001" />
                                            <span class="input-group-text">€/kW/día</span>
                                        </div>
                                        <small class="text-muted">Ej: 0.0034</small>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-12">
                                        <strong class="d-block mb-2">Precios de Energía (€/kWh)</strong>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Periodo 1 (Punta)</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.PrecioEnergiaP1" step="0.001" />
                                            <span class="input-group-text">€/kWh</span>
                                        </div>
                                        <small class="text-muted">Ej: 0.168</small>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Periodo 2 (Llano)</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.PrecioEnergiaP2" step="0.001" />
                                            <span class="input-group-text">€/kWh</span>
                                        </div>
                                        <small class="text-muted">Ej: 0.098</small>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Periodo 3 (Valle)</label>
                                        <div class="input-group">
                                            <InputNumber class="form-control" @bind-Value="tarifaActual.PrecioEnergiaP3" step="0.001" />
                                            <span class="input-group-text">€/kWh</span>
                                        </div>
                                        <small class="text-muted">Ej: 0.065</small>
                                    </div>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        }

        <!-- Modal Confirmar Eliminación -->
        @if (mostrarModalEliminar)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0 shadow-lg">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación
                            </h5>
                            <button type="button" class="btn-close btn-close-white" @onclick="() => mostrarModalEliminar = false"></button>
                        </div>
                        <div class="modal-body p-4">
                            <p class="mb-3">¿Estás seguro de que deseas eliminar esta tarifa?</p>
                            <div class="alert alert-warning mb-0">
                                <strong><i class="bi bi-lightning-charge-fill me-2"></i>@tarifaAEliminar?.Empresa - @tarifaAEliminar?.Nombre</strong>
                                <br />
                                <small>Esta acción no se puede deshacer</small>
                            </div>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="button" class="btn btn-secondary" @onclick="() => mostrarModalEliminar = false">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </button>
                            <button type="button" class="btn btn-danger" @onclick="EliminarTarifa" disabled="@eliminando">
                                @if (eliminando)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Eliminando...</span>
                                }
                                else
                                {
                                    <i class="bi bi-trash me-2"></i>
                                    <span>Eliminar Tarifa</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}

@code {
    private bool cargandoSesion = true;
    private bool cargando = true;
    private bool guardando = false;
    private bool eliminando = false;
    private bool mostrarModal = false;
    private bool mostrarModalEliminar = false;
    private bool modoEdicion = false;
    private string mensajeExito = string.Empty;
    private string mensajeError = string.Empty;

    private List<TarifaEnergia> tarifas = new();
    private List<TarifaEnergia> tarifasFiltradas = new();
    private List<Comercializadora> comercializadoras = new();
    private TarifaEnergia tarifaActual = new();
    private TarifaEnergia? tarifaAEliminar;
    
    // Ordenamiento
    private string columnaOrden = "Empresa";
    private bool ordenAscendente = true;
    
    // Paginación
    private int paginaActual = 1;
    private int elementosPorPagina = 10;
    private int totalElementos = 0;
    private int totalPaginas = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AuthService.CargarSesionAsync();

            if (!AuthService.EstaAutenticado)
            {
                Navigation.NavigateTo("/login", false);
                return;
            }

            cargandoSesion = false;
            await CargarComercializadoras();
            await CargarTarifas();
            StateHasChanged();
        }
    }

    private async Task CargarComercializadoras()
    {
        try
        {
            comercializadoras = await ComercializadoraService.ObtenerActivasAsync();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar comercializadoras: {ex.Message}";
        }
    }

    private async Task CargarTarifas()
    {
        cargando = true;
        try
        {
            tarifas = await TarifaService.ObtenerTodasAsync();
            AplicarOrdenamiento();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar tarifas: {ex.Message}";
        }
        finally
        {
            cargando = false;
        }
    }

    private void OrdenarPor(string columna)
    {
        paginaActual = 1;
        if (columnaOrden == columna)
        {
            ordenAscendente = !ordenAscendente;
        }
        else
        {
            columnaOrden = columna;
            ordenAscendente = true;
        }
        
        AplicarOrdenamiento();
    }

    private void AplicarOrdenamiento()
    {
        var tarifasParaPaginar = columnaOrden switch
        {
            "Empresa" => ordenAscendente
                ? tarifas.OrderBy(t => t.Empresa).ToList()
                : tarifas.OrderByDescending(t => t.Empresa).ToList(),
            "Tipo" => ordenAscendente
                ? tarifas.OrderBy(t => t.Tipo).ToList()
                : tarifas.OrderByDescending(t => t.Tipo).ToList(),
            "Nombre" => ordenAscendente
                ? tarifas.OrderBy(t => t.Nombre).ToList()
                : tarifas.OrderByDescending(t => t.Nombre).ToList(),
            "PrecioNew" => ordenAscendente
                ? tarifas.OrderBy(t => t.PrecioNew).ToList()
                : tarifas.OrderByDescending(t => t.PrecioNew).ToList(),
            "Comision" => ordenAscendente
                ? tarifas.OrderBy(t => t.Comision).ToList()
                : tarifas.OrderByDescending(t => t.Comision).ToList(),
            _ => tarifas
        };
        
        totalElementos = tarifasParaPaginar.Count;
        totalPaginas = (int)Math.Ceiling((double)totalElementos / elementosPorPagina);
        
        tarifasFiltradas = tarifasParaPaginar
            .Skip((paginaActual - 1) * elementosPorPagina)
            .Take(elementosPorPagina)
            .ToList();
        
        StateHasChanged();
    }
    
    private void CambiarPagina(int nuevaPagina)
    {
        if (nuevaPagina >= 1 && nuevaPagina <= totalPaginas)
        {
            paginaActual = nuevaPagina;
            AplicarOrdenamiento();
        }
    }

